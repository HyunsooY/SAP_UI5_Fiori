<mvc:View controllerName="sap.btp.ux400solving.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:t="sap.ui.table">
    <Page id="page" title="{i18n>title}">
        <content >
            <VBox class="sapUiLargeMargin">
                <Text text="버튼을 클릭하면 아래 Input에 값이 랜덤으로 채워집니다."/>
                <Input id="idInput"/>
                <Button text="Random" press="onRandomPress"/>
            </VBox>
            <t:Table rows="{list>/Random}" class="sapUiLargeMargin">
                <t:extension>
                    <OverflowToolbar >
                        <Title text="랜덤 목록 리스트"/>
                    </OverflowToolbar>
                </t:extension>
                <t:columns>
                    <t:Column >
                        <Label text="value"/>
                        <t:template>
                            <Text text="{list>value}"/>
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
            <Button text="open Product" press="onDialog" class="sapUiLargeMargin"/>
        </content>
    </Page>
</mvc:View>
