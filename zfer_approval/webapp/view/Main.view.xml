<mvc:View
		xmlns:c="sap.ui.core"
		controllerName="ER.zferapproval.controller.Main"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:u="sap.ui.unified"
		xmlns="sap.m"
		xmlns:t="sap.ui.table"
		xmlns:f="sap.f"
		xmlns:layout="sap.ui.layout"
		xmlns:tnt="sap.tnt"
		xmlns:ux="sap.uxap"
		height="100%">
		<f:DynamicPage id="dynamicPageId" preserveHeaderStateOnScroll="true" headerExpanded="{/headerExpanded}" showFooter="true" fitContent="true">
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<Title text="EReON 결재"/>
					</f:heading>
					<!-- <f:expandedContent>
						<Label text="This is a subheading"/>
					</f:expandedContent>
					<f:snappedContent>
						<Label text="This is a subheading"/>
					</f:snappedContent>
					<f:snappedTitleOnMobile>
						<Title text="This is a subheading"/>
					</f:snappedTitleOnMobile> -->
					
					<f:content>
						<OverflowToolbar>
							<GenericTag text="SR"
								status="Error"
								press="onGenericTagPress"
								design="StatusIconHidden">
								<ObjectNumber number="2"
									unit="M"
									emphasized="false"
									state="Error"/>
							</GenericTag>
						</OverflowToolbar>
					</f:content>
					<f:actions>
						<ToolbarSpacer/>
						<Button
								text="Edit"
								type="Emphasized"/>
						<Button
								text="Delete"
								type="Transparent"/>
						<Button
								text="Copy"
								type="Transparent"/>
						<Button
								icon="sap-icon://action"
								type="Transparent"/>
					</f:actions>
				</f:DynamicPageTitle>
			</f:title>

			<!-- DynamicPage Header -->
			<f:header>
				<f:DynamicPageHeader pinnable="true">
						<FlexBox
								alignItems="Start"
								justifyContent="SpaceBetween">
							<items>
								<Panel
										backgroundDesign="Transparent"
										class="sapUiNoContentPadding">
									<content>
										<layout:HorizontalLayout
												allowWrapping="true">
											<layout:VerticalLayout
													class="sapUiMediumMarginEnd">
												<ObjectAttribute title="Location" text="Warehouse A"/>
												<ObjectAttribute title="Halway" text="23L"/>
												<ObjectAttribute title="Rack" text="34"/>
											</layout:VerticalLayout>
											<layout:VerticalLayout>
												<ObjectAttribute title="Availability"/>
												<ObjectStatus text="In Stock" state="Success" />
											</layout:VerticalLayout>
										</layout:HorizontalLayout>
									</content>
								</Panel>
							</items>
						</FlexBox>
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
		
				<t:Table
						rows="{app>/all}"
						selectionMode="None"
						visibleRowCountMode="Fixed"
						visibleRowCount="10"
						>
					<t:extension>
						<!-- <OverflowToolbar style="Clear" height="100%" >
							<Title text="Products"/> -->
							<IconTabBar
								id="idIconTabBarSeparatorNoIcon"
								expanded="true"
								class="sapUiResponsiveContentPadding"
								selectedKey="info">
									<items>
										<IconTabFilter
											key="info"
											icon="sap-icon://inbox"
											text="전체"
											iconColor="Neutral"
											count="{app>/count/All}"
											>
										</IconTabFilter>
										<IconTabSeparator icon=""/>
										<IconTabFilter
											key="attachments"
											icon="sap-icon://end-user-experience-monitoring"
											text="결재 예정"
											iconColor="Critical"
											count="{app>/count/Req}">
										</IconTabFilter>
										<IconTabFilter
											key="notes"
											icon="sap-icon://employee-approvals"
											text="결재 승인"
											iconColor="Positive"
											count="{app>/count/App}">
										</IconTabFilter>
										<IconTabFilter
											key="people"
											icon="sap-icon://employee-rejections"
											text="결재 반려"
											iconColor="Negative"
											count="{app>/count/Den}">
										</IconTabFilter>
									</items>
							</IconTabBar>
						<!-- </OverflowToolbar> -->
					</t:extension>
					<t:columns>
						<t:Column hAlign="Center">
							<Label text="상태" />
							<t:template>
								<tnt:InfoLabel id="idAppstate" text="{=${app>Appstate} === 'D' ? '반려' : ${app>Appstate} === 'A' ? '승인' : '예정'}" 
								renderMode="Loose" colorScheme="{=${app>Appstate} === 'D' ? 2 : ${app>Appstate} === 'A' ? 7 : 1}"/>
							</t:template> 
						</t:Column>
						<t:Column hAlign="Center">
							<Label text="결재문서번호" />
							<t:template>
								<Text text="{app>Appdounum}" wrapping="false" />
							</t:template>
						</t:Column>
						<t:Column hAlign="Center">
							<Label text="요청문서번호" />
							<t:template>
								<Text text="{app>Requestid}"/>
							</t:template>
						</t:Column>
						<t:Column hAlign="Center">
							<Label text="요청문서정보" />
							<t:template>
								<Button text="문서정보" press="onRequestButton"
								enabled="{=${app>Appstate} === 'D' ? false : true}"/>
							</t:template>
						</t:Column>
                        <t:Column hAlign="Center">
							<Label text="요청 내용" />
							<t:template>
								<Text text="{app>Repdesc}"/>
							</t:template>
						</t:Column>
                        <t:Column hAlign="Center">
							<Label text="상신자 정보" />
							<t:template>
                                <ObjectIdentifier title="{app>Reportid}" text="{app>Reportname}"/>
							</t:template>
						</t:Column>
                        <t:Column hAlign="Center">
                            <ObjectIdentifier title="" text=""/>
							<Label text="상신일자 및 시간" />
							<t:template>
								<ObjectIdentifier title="{path : 'app>Repdate', formatter : '.formatter.dateTime'}" text="{path : 'app>Reptime/ms', formatter : '.formatter.Time'}"/>
							</t:template>
						</t:Column>						
						<!-- <t:Column width="6rem" hAlign="End">
							<Label text="Quantity" />
							<t:template>
								<Label text="{Quantity}" />
							</t:template>
						</t:Column>
						<t:Column width="9rem">
							<Label text="Status" />
							<t:template>
								<ObjectStatus text="{Status}" state="{
								path: 'Available',
								formatter: '.formatAvailableToObjectState'
							}"/>
							</t:template>
						</t:Column>
						<t:Column width="9rem">
							<Label text="Price" />
							<t:template>
								<u:Currency value="{Price}" currency="{CurrencyCode}"/>
							</t:template>
						</t:Column>
						<t:Column width="12rem">
							<Label text="Supplier" />
							<t:template>
								<ComboBox value="{SupplierName}" items="{/Suppliers}">
									<c:Item text="{Name}"/>
								</ComboBox>
							</t:template>
						</t:Column>
						<t:Column width="9rem">
							<Label text="Image" />
							<t:template>
								<Link text="Show Image" href="{ProductPicUrl}" target="_blank"/>
							</t:template>
						</t:Column>
						<t:Column width="9rem">
							<Label text="Details" />
							<t:template>
								<Button text="Show Details" press="handleDetailsPress"/>
							</t:template>
						</t:Column>
						<t:Column width="7rem">
							<Label text="Heavy Weight" />
							<t:template>
								<CheckBox selected="{
								path: 'Heavy',
								type: 'sap.ui.model.type.String'
							}"/>
							</t:template>
						</t:Column>
						<t:Column width="12rem">
							<Label text="Category" />
							<t:template>
								<Select selectedKey="{Category}" items="{/Categories}">
									<c:Item text="{Name}" key="{Name}"/>
								</Select>
							</t:template>
						</t:Column>
						<t:Column width="6rem" hAlign="Center">
							<Label text="Status" />
							<t:template>
								<c:Icon src="{
								path: 'Available',
								formatter: '.formatAvailableToIcon'
							}"/>
							</t:template>
						</t:Column>
						<t:Column width="11rem" hAlign="Center">
							<Label text="Delivery Date" />
							<t:template>
								<DatePicker value="{
								path: 'DeliveryDate',
								type: 'sap.ui.model.type.Date',
								formatOptions: {source: {pattern: 'timestamp'}}
							}"/>
							</t:template>
						</t:Column> -->
					</t:columns>
				</t:Table>
			</f:content>
			<!-- DynamicPage Footer -->
			<!-- <f:footer>
				<OverflowToolbar>
					<Button icon="sap-icon://message-popup"
							text="{/messagesLength}"
							type="Emphasized"
							press="onMessageButtonPress"
							visible="{= !!${/messagesLength}}"/>
					<ToolbarSpacer/>
					<Button type="Accept" text="Accept"/>
					<Button type="Reject" text="Reject"/>
				</OverflowToolbar>
			</f:footer> -->
		</f:DynamicPage>
</mvc:View>