<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
	<Popover
		id="MyPageDialog"
		title="{login>/login/Name}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
        showHeader="false">
        <content>
            <OverflowToolbar height="60px" width="300px">
                <Toolbar height="60px">
                    <Avatar
                            src="sap-icon://account"
                            displayShape="Circle"
                        />
                    <ToolbarSpacer />
                    <Text text="내 정보 상세"/>
                </Toolbar>
            </OverflowToolbar>
            <form:SimpleForm
                    minWidth="1024"
                    editable="false"
                    layout="ResponsiveGridLayout">
                <form:content>
                    <Label text="아이디"/>
                    <Text text="{login>/login/Custid}"/>
                    <Label text="성명"/>
                    <Text text="{login>/login/Name}"/>
                    <Label text="성별"/>
                    <Text text="{login>/login/Gender}"/>
                    <Label text="생년월일"/>
                    <Text text="{path : 'login>/login/Birth', formatter: '.formatter.dateTime'}"/>
                    <Label text="전화번호"/>
                    <Text id="idTelnoText" text="{login>/login/Telno}" visible="true"/>
                    <Input id="idTelnoInput" value="{login>/login/Telno}" visible="false"/>
                    <Label text="주소"/>
                    <Text id="idAddressText" text="{login>/login/Address}" visible="true"/>
                    <Input id="idAddressInput" value="{login>/login/Address}" visible="false"/>
                    <Label text="가입일자"/>
                    <Text text="{path : 'login>/login/Joindate', formatter: '.formatter.dateTime'}"/>
                </form:content>
            </form:SimpleForm>
        </content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
                <Button id="idInfoChange" text="변경" press="onInfoChange"/>
				<Button id="idInfoUpdate" text="저장" press="onInfoUpdate"/>
                <Button id="idInfoDelete" text="회원탈퇴" press="onInfoDelete"/>
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>
