<mvc:View controllerName="ER.zfermembership.controller.Join"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:t="sap.ui.table">
    <Page id="page" title="{i18n>title}">
        <content>
        <OverflowToolbar style="Clear">
                <ToolbarSpacer />
                <Button id="idButton" text="회원가입" icon="sap-icon://create" press="onCreate"
                    type="Emphasized" enabled="false" />
                <Button text="로그인 화면으로" press="onLogin" />
            </OverflowToolbar>
        <VBox class="sapUiLargeMargin">
            <!-- <l:Grid defaultSpan="XL3 L4 M6 S12"> -->
                <Text text="아이디" />
                <Input id="idInputID" value="{join>/Custid}" width="500px" enabled="false" />
                <Text text="성명" />
                <Input id="idInputName" value="{join>/Name}" change="onValueChange"
                    valueState="None" placeholder="조아핑" width="500px" />
                <Text text="성별" />
                <l:HorizontalLayout >
                    <RadioButtonGroup id="Gender">
                        <RadioButton text="남성" selected="true" />
                        <RadioButton text="여성" />
		            </RadioButtonGroup>
                </l:HorizontalLayout>
                <!-- <Input value="{join>/Gender}" placeholder="성별"/> -->
                <Text text="생년월일" />
                <DatePicker id="idBirthDate" displayFormat="yyyy-MM-dd" valueFormat="yyyyMMdd"
                    change="onValueChange" valueState="None" width="500px" />
                <Input id="idBDate" value="{join>/Birth}" placeholder="생년월일" enabled="false" />
                <Text text="전화번호" />
                <Input id="idInputTel" value="{join>/Telno}" change="onValueChange"
                    valueState="None" placeholder="0000000000, '-' 없이 입력하세요." width="500px" />
                <Text text="주소" />
                <Input id="idInputAdd" value="{join>/Address}" change="onValueChange"
                    valueState="None" placeholder="서울특별시 종로구 종로 51" width="500px" />
                <Text text="면허번호" />
                <Input id="idInputLic" value="{join>/Licnum}" change="onValueChange"
                    valueState="None" placeholder="11-10-154201-00" width="500px" />
                <Text text="가입일자" />
                <DatePicker id="idJoinDate" displayFormat="yyyy-MM-dd" valueFormat="yyyyMMdd"
                    showCurrentDateButton="true" width="500px" />
                <Input id="idJDate" value="{join>/Joindate}" enabled="false" width="500px" />
            <!-- </l:Grid> -->
            </VBox>
        </content>
    </Page>
</mvc:View>
